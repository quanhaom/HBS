package frame;

import java.awt.BorderLayout;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import services.Store;

public class ProductFrame extends JFrame { 
    private JButton backButton;
    private ManagerFrame managerFrame;

    public ProductFrame(Store store, ManagerFrame managerFrame) {
        this.managerFrame = managerFrame;

        JPanel actionPanel = new JPanel();
        add(actionPanel, BorderLayout.SOUTH);

        backButton = new JButton("Back");
        actionPanel.add(backButton);

        backButton.addActionListener(e -> back());

        setTitle("Product Frame");
        setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE); // Đóng khung này mà không thoát ứng dụng
        setLocationRelativeTo(null);
        setSize(800, 600); // Thiết lập kích thước phù hợp
    }

    private void back() {
        setVisible(false);  // Ẩn khung ProductFrame
        managerFrame.setVisible(true);  // Hiển thị lại ManagerFrame
    }
}
