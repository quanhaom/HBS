package frame;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import services.Store;

public class ProductFrame extends EmployeeFrame {
    private ManagerFrame managerFrame;

    public ProductFrame(Store store, ManagerFrame managerFrame) {
        super(store, null);  // Call BaseFrame constructor
        this.managerFrame = managerFrame;

        // Set up the frame
        setTitle("Product Frame");
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null);

        // Create a panel to hold the button
        JPanel panel = new JPanel();
        
        // Create Back button
        JButton backButton = new JButton("Back");
        backButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                // Show the ManagerFrame and hide the ProductFrame
                managerFrame.setVisible(true);
                dispose(); // Optionally close this frame
            }
        });

        // Add the button to the panel
        panel.add(backButton);
        add(panel); // Add the panel to the frame

        // Set the frame size (optional)
        setSize(400, 300); // Set the desired size for the ProductFrame
    }
}
