package model;

public class Book extends Product {
	private String author;
	private String isbn;
	private int publicationYear; // Add publication year

	public Book(String id, String name, double price, int quantity, String author, String isbn, int publicationYear) {
		super(id, name, price, quantity);
		this.author = author;
		this.isbn = isbn;
		this.publicationYear = publicationYear; // Initialize publication year
	}

	// Getters
	public String getAuthor() {
		return author;
	}

	public String getIsbn() {
		return isbn;
	}

	public int getPublicationYear() {
		return publicationYear; // Getter for publication year
	}

	@Override
	public String toString() {
		return "Book [ID=" + getId() + ", Name=" + getName() + ", Price=" + getPrice() + ", Author=" + author
				+ ", ISBN=" + isbn + ", Publication Year=" + publicationYear + "]";
	}
}
