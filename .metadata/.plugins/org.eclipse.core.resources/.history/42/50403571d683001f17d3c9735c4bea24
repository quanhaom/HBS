package frame;

import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import model.Person;
import services.Store;

public class LoginFrame extends JFrame {
    private JTextField usernameField;
    private JPasswordField passwordField;
    private Store store;

    public LoginFrame(Store store) {
        this.store = store;
        setTitle("Login Frame");
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null);
        setSize(300, 200);
        
        JPanel panel = new JPanel();
        panel.setLayout(new GridLayout(3, 2));
        
        panel.add(new JLabel("Username:"));
        usernameField = new JTextField();
        panel.add(usernameField);
        
        panel.add(new JLabel("Password:"));
        passwordField = new JPasswordField();
        panel.add(passwordField);
        
        JButton loginButton = new JButton("Login");
        panel.add(loginButton);
        
        add(panel, BorderLayout.CENTER);
        
        loginButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                login();
            }
        });
    }

    private void login() {
        String username = usernameField.getText();
        String password = new String(passwordField.getPassword());

        // Simulate user authentication (Replace with actual authentication logic)
        Person loggedInPerson = authenticate(username, password);
        
        if (loggedInPerson != null) {
            // Successfully logged in, open CustomerFrame with the user's name
            CustomerFrame customerFrame = new CustomerFrame(store, this, loggedInPerson.getName());
            customerFrame.setVisible(true);
            this.setVisible(false);
        } else {
            JOptionPane.showMessageDialog(this, "Invalid username or password.", "Login Error", JOptionPane.ERROR_MESSAGE);
        }
    }

    // Replace this method with actual authentication logic
    private Person authenticate(String username, String password) {
        // Example logic; replace with real user authentication
        if ("user".equals(username) && "pass".equals(password)) {
            return new Person("1", "User Name", password, "customer"); // Dummy user
        }
        return null;
    }
}
