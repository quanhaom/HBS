package frame;

import java.awt.BorderLayout;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import services.Store;

public class ProductFrame extends JFrame {
    private Store store;
    private ManagerFrame managerFrame; // Instance reference to ManagerFrame

    // Constructor that takes Store and ManagerFrame as parameters
    public ProductFrame(Store store, ManagerFrame managerFrame) {
        this.store = store;
        this.managerFrame = managerFrame; // Store the reference

        setTitle("Product Management");
        setSize(600, 400);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null);

        // Button Panel
        JPanel buttonPanel = new JPanel();
        JButton logoutButton = new JButton("Logout");
        buttonPanel.add(logoutButton);
        add(buttonPanel, BorderLayout.SOUTH);

        // Action listener for logout button
        logoutButton.addActionListener(e -> logout());

        // Load products or any other initialization here
    }

    private void logout() {
        this.setVisible(false); // Hide the ProductFrame
        managerFrame.setVisible(true); // Show the ManagerFrame
    }

    // Other methods for managing products can be added here
}
